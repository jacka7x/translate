{
    "manifest_version": 3,
    "version": "0.0",
    "name": "PLACEHOLDER_EXT_NAME",
    
    "icons": {
        // X size
        // XX size
    },

    "action": {
        // "browser_style": true,
        // "default_icon": {
        //   "16": "button/geo-16.png",
        //   "32": "button/geo-32.png"
        // },
        "default_title": "DEFAULT_TITLE",
        "default_popup": "/popup/popup.html"
    },

    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],

    "host_permissions": ["https://api.com"],

    "background": {
        "service_worker": "/background_scripts/background.js"
    },

    "content_scripts": [
        {   
            "matches": ["<all_urls>"],
            "js": ["/content_scripts/content-script.js"]
        }
    ],

    "web_accessible_resources": [
        {
        "resources": [
            "/modules/word-selection.js",
            "/modules/translation.js"
        ],
        "matches": ["<all_urls>"]
        }
    ] 
}